datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Roles
model Role {
  id   Int    @id @default(autoincrement())
  name String @unique

  users User[]
}

// Users
model User {
  id           Int     @id @default(autoincrement())
  email        String  @unique
  name         String?
  passwordHash String
  roleID       Int
  role         Role    @relation(fields: [roleID], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
